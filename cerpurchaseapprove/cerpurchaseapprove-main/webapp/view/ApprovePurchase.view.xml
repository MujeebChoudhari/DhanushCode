<mvc:View controllerName="gb.wf.cer.purchase.approve.controller.ApprovePurchase" displayBlock="true" xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:t="sap.ui.table">
	<ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false"
		headerContentPinnable="true" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<!--	<m:Title text="Pre-Approval by VP" wrapping="true" class="sapUiSmallMarginEnd"/>-->
				</expandedHeading>
				<snappedHeading>
					<!--	<m:Title text="Pre-Approval by VP" wrapping="true" class="sapUiSmallMarginEnd"/>
					
						<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
							<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
								<f:Avatar src="https://sapui5.hana.ondemand.com/{products>ProductPicUrl}" displaySize="S" displayShape="Square" class="sapUiTinyMarginEnd"/>
								<m:Title text="{/task/Title}" wrapping="true"/>
							</m:FlexBox>
						</m:FlexBox>
						-->
				</snappedHeading>
				<!--
					<navigationActions>
						<m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" tooltip="Nav Action"
							visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
					</navigationActions>
					-->
				<actions></actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<m:FlexBox renderType="Bare" wrap="Wrap" fitContainer="true" justifyContent="SpaceBetween">
				<!--<m:VBox renderType="Bare">
					<m:ObjectAttribute title="{i18n>createdOn}" text="{/task/CreatedOn}"/>
					<m:ObjectAttribute title="{i18n>description}" text="JÃ¶rg Zude"/>
				</m:VBox>-->
				<m:VBox renderType="Bare">
					<m:ObjectStatus text="{/task/Status}" state="None"/>
					<m:ObjectStatus text="{/task/Priority}" state="Success"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>
		<sections>
			<ObjectPageSection title="Request"
				visible="{= (${ctx>/isForwarding} !==undefined &amp;&amp; ${ctx>/isForwarding} === true &amp;&amp; ${ctx>/isForwardingToRequester} !==undefined &amp;&amp; ${ctx>/isForwardingToRequester} ===true)}">
				<subSections>
					<ObjectPageSubSection >
						<form:SimpleForm title="Request start" editable="true" maxContainerCols="1" columnsL="1" columnsXL="1" layout="ResponsiveGridLayout">
							<m:Label text="Enable edit mode"/>
							<m:Button id="btnEdit" width="15%" text="Edit" press="onEditPressed"/>
							<m:Label text="Title" required="false"/>
							<m:Input id="shorttext" value="{ctx>/ShortText}" enabled="{= (${lcl>/isEditMode} ===true)}" visible="true"/>
							<!--<m:Label text="Short Text" required="false"/>-->
							<!--<m:Input id="shorttextinput" value="{ctx>/ShortText}" placeholder="Please enter short text"/>-->
							<m:Label text="Requester" required="false"/>
							<m:Text text="{ctx>/requesterName}"/>
							<m:Label text="Requester email" required="true"/>
							<m:Input value="{pur>/requesterEmail}" visible="false"/>
							<m:Label text="Legal entity" required="true"/>
							<m:Select id="legalEntityComboBoxWF" selectedKey="{ctx>/legalEntity}" forceSelection="false" enabled="{lcl>/isEditMode}"
								showSecondaryValues="true" items="{ path: 'test>/LegalEntity', sorter: { path: 'CompanyCodeName' }, length: '100000'}"
								change="onSelectLegalEntity">
								<core:ListItem key="{test>CompanyCode}" text="{test>CompanyCodeName}" additionalText="{test>CompanyCode}"/>
							</m:Select>
							<m:Label text="Cost Center" required="true" visible="{= (${lcl>/isEditMode} !==true)}"/>
							<m:Input value="{ctx>/costCenterDisplayName}" visible="{= (${lcl>/isEditMode} !==true)}" enabled="false"/>
							<m:Label text="Cost Center" required="true" visible="{= (${lcl>/isEditMode} ===true)}"/>
							<m:Select id="costCenterComboBoxWF" visible="{= (${lcl>/isEditMode} ===true)}" selectedKey="{ctx>/costCenter}" enabled="{lcl>/isEditMode}"
								forceSelection="false" showSecondaryValues="true" change="onSelectCostCenter">
								<core:ListItem key="{test>CostCenter}" text="{test>CostCenterName}" additionalText="{test>CostCenter}"/>
							</m:Select>
							<m:Label text="Purchasing organization" required="false" visible="{= (${lcl>/isEditMode} !==true)}"/>
							<m:Input value="{ctx>/purchasingOrgDisplayName}" visible="{= (${lcl>/isEditMode} !==true)}" enabled="false"/>
							<m:Label text="Purchasing organization" required="false" visible="{= (${lcl>/isEditMode} ===true)}"/>
							<m:Select id="purchasingOrderComboBoxWF" selectedKey="{ctx>/purchasingOrganization}" visible="{= (${lcl>/isEditMode} ===true)}"
								showSecondaryValues="true" enabled="false" forceSelection="false" change="onSelectPurchasingOrganization"></m:Select>
							<m:Label text="Plant" required="true" visible="{= (${lcl>/isEditMode} !==true)}"/>
							<m:Input value="{ctx>/plantdescription}" visible="{= (${lcl>/isEditMode} !==true)}" enabled="false"/>
							<m:Label text="Plant" required="true" visible="{= (${lcl>/isEditMode} ===true)}"/>
							<m:Select id="plantComboBoxWF" visible="{= (${lcl>/isEditMode} ===true)}" selectedKey="{ctx>/plant}" enabled="false" forceSelection="false"
								showSecondaryValues="true"></m:Select>
							<m:Label text="Type" required="true"/>
							<m:RadioButtonGroup select="onTypeChange" id="typeRadioButtonWF" columns="2" editable="{lcl>/isEditMode}" selectedIndex="0">
								<m:buttons>
									<m:RadioButton id="OC" text="OPEX" selected="true"/>
									<m:RadioButton id="IV" text="CAPEX"/>
								</m:buttons>
							</m:RadioButtonGroup>
							<m:Label text="Internal Order " required="true" visible="{= (${lcl>/isEditMode} !==true)}"/>
							<m:Input value="{ctx>/sInternalOrderDescription}" visible="{= (${lcl>/isEditMode} !==true)}" enabled="false"/>
							<m:Label text="Internal Order " required="true" visible="{= (${lcl>/isEditMode} ===true)}"/>
							<m:Input id="internalOrderSelectDialogWF" type="Text" visible="{= (${lcl>/isEditMode} ===true)}" enabled="{lcl>/isEditMode}"
								value="{ctx>/sInternalOrderDescription}" placeholder="Select an internal order ..." showValueHelp="true" valueHelpOnly="false"
								showSuggestion="false" valueHelpRequest="handleValueHelpInternalOrder" suggest="handleSuggest"
								suggestionItemSelected="handleConfirmInternalOrder" width="100%" class="sapUiSmallMarginBottom"
								suggestionItems="{internalOrders>/internalOrder}">
								<m:suggestionItems>
									<core:Item text="{internalOrders>Description}" key="{internalOrders>OrderNumber}"/>
								</m:suggestionItems>
							</m:Input>
							<m:Label text="Requisition type" required="true"/>
							<m:RadioButtonGroup id="prTypeRadioButtonWF" columns="2" editable="{lcl>/isEditMode}" selectedIndex="0" select="onChangeRequisitionType">
								<m:buttons>
									<m:RadioButton id="ZNB" text="Purchase requisition" selected="true"/>
									<m:RadioButton id="ZOF" text="Framework requisition"/>
								</m:buttons>
							</m:RadioButtonGroup>
						</form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="Delivery address"
				visible="{= (${ctx>/isForwarding} !==undefined &amp;&amp; ${ctx>/isForwarding} === true &amp;&amp; ${ctx>/isForwardingToRequester} !==undefined &amp;&amp; ${ctx>/isForwardingToRequester} ===true)}">
				<subSections>
					<ObjectPageSubSection>
						<m:VBox class="sapUiSmallMargin">
							<form:SimpleForm maxContainerCols="1" columnsL="1" columnsXL="1" layout="ResponsiveGridLayout">
								<form:content>
									<m:Label text="Name" required="true"/>
									<m:Input value="{ctx>/Name}" editable="{lcl>/isEditMode}"/>
									<m:Label text="Name2"/>
									<m:Input value="{ctx>/Name2}" editable="{lcl>/isEditMode}"/>
									<m:Label text="Street/No." required="true"/>
									<m:Input value="{ctx>/Street1}" editable="{lcl>/isEditMode}"/>
									<m:Input value="{ctx>/HouseNo}" editable="{lcl>/isEditMode}">
										<m:layoutData>
											<l:GridData span="XL2 L1 M3 S4"/>
										</m:layoutData>
									</m:Input>
									<m:Label text="ZIP Code/City"/>
									<m:Input value="{ctx>/PostalCode}" editable="{lcl>/isEditMode}">
										<m:layoutData>
											<l:GridData span="XL2 L1 M3 S4"/>
										</m:layoutData>
									</m:Input>
									<m:Input value="{ctx>/City}" required="true" editable="{lcl>/isEditMode}"/>
									<m:Label text="Country" required="true"/>
									<m:Input value="{ctx>/CountryName}" maxLength="3" editable="{lcl>/isEditMode}"/>
								</form:content>
							</form:SimpleForm>
						</m:VBox>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="Reenter Positions"
				visible="{= (${ctx>/isForwarding} !==undefined &amp;&amp; ${ctx>/isForwarding} === true &amp;&amp; ${ctx>/isForwardingToRequester} !==undefined &amp;&amp; ${ctx>/isForwardingToRequester} ===true)}">
				<subSections>
					<ObjectPageSubSection>
						<form:SimpleForm maxContainerCols="3" editable="true" layout="ResponsiveGridLayout">
							<t:Table width="100%" id="positionNumberTableWF" fixedColumnCount="1" editable="{lcl>/isEditMode}" selectionMode="None"
								rows="{ctx>/position/data}" visibleRowCount="10" enableSelectAll="false" threshold="15" enableBusyIndicator="true" ariaLabelledBy="position">
								<t:columns>
									<t:Column width="3rem" hAlign="Center">
										<m:Label text="Pos"/>
										<t:template>
											<m:Text text="{ctx>PositionNum}" textAlign="Right" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column width="6rem" hAlign="Center">
										<m:Label text="Description"/>
										<t:template>
											<m:Input value="{ctx>Description}" change="onSubmit" maxLength="40"/>
										</t:template>
									</t:Column>
									<t:Column width="10rem" hAlign="Center">
										<m:Label text="Supplier"/>
										<t:template>
											<m:Input id="supplierSelectDialog" type="Text" value="{ctx>SupplierDisplay}" placeholder="Select a supplier ..." showValueHelp="true"
												valueHelpOnly="true" valueHelpRequest="handleValueHelpSupplier" width="100%"/>
										</t:template>
									</t:Column>
									<t:Column width="10rem" hAlign="Center">
										<m:Label text="Delivery date"/>
										<t:template>
											<!--<m:DatePicker id="deliveryDatePicker" placeholder="Date ..." change="onChangeDatePicker"-->
											<!--	value="{ path:'ctx>Delivery', type:'sap.ui.model.type.DateTime', constraints: { displayFormat: 'Date' }, formatOptions: { style: 'medium', source: { pattern: 'dd-MM-yyyy' }, strictParsing: true } }"/>-->
											<m:DatePicker id="deliveryDatePicker" change="onChangeDatePicker" value="{ctx>Delivery}" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy"
												placeholder="Delivery Date"/>
										</t:template>
									</t:Column>
									<t:Column width="10rem" hAlign="Center">
										<m:Label text="G/L Account"/>
										<t:template>
											<m:Input id="glAccountSelectDialog" type="Text" value="{ctx>GlAccount}" placeholder="Select a GL/Account ..." showValueHelp="true"
												valueHelpOnly="true" valueHelpRequest="handleValueHelpGLAccount" width="100%"/>
										</t:template>
									</t:Column>
									<t:Column width="6rem" hAlign="Center">
										<m:Label text="Quantity"/>
										<t:template>
											<m:Input value="{path:'ctx>Quantity', type:'sap.ui.model.type.Float',formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 }}"
												change="onSubmitUnitPrice"/>
										</t:template>
									</t:Column>
									<t:Column width="10rem" hAlign="Center">
										<m:Label text="Unit price"/>
										<t:template>
											<m:Input value="{path:'ctx>Amount', type:'sap.ui.model.type.Float',formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 }}"
												change="onSubmitUnitPrice"/>
										</t:template>
									</t:Column>
									<t:Column width="10rem" hAlign="Center">
										<m:Label text="Total"/>
										<t:template>
											<m:Input value=" { path: 'ctx>TotalAmount', formatter: '.formatter.In_en_DE_WithCurrency' }" enabled="false"/>
										</t:template>
									</t:Column>
									<t:Column width="6rem" hAlign="Center">
										<m:Label text="Currency"/>
										<t:template>
											<m:Select id="currencyComboBox" selectedKey="{ctx>Currency}" forceSelection="false" enabled="true" change="onChangeCurrency"
												items="{ path: 'currency>/currencies', sorter: { path: 'Currency' } }">
												<core:ListItem key="{currency>Currency}" text="{currency>Currency}"/>
											</m:Select>
										</t:template>
									</t:Column>
									<t:Column width="6rem" hAlign="Center">
										<m:Label text="UoM"/>
										<t:template>
											<m:Select id="uomComboBox" selectedKey="{ctx>UnitMeasure}" forceSelection="false" enabled="true" change="onChangeUoM"
												items="{ path: 'unitMeasure>/unitMeasures', sorter: { path: 'UnitText' } }">
												<core:ListItem key="{unitMeasure>UnitMeasure}" text="{unitMeasure>UnitText}"/>
											</m:Select>
										</t:template>
									</t:Column>
									<t:Column width="3rem" hAlign="Center" visible="true">
										<t:template>
											<m:Button id="btnDelete" press="onDeleteRow" icon="sap-icon://delete"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<m:OverflowToolbar width="100%">
										<m:ToolbarSpacer/>
										<m:Button id="calculate" text="Calculate Total" press="onPressCalculateTotal"/>
									</m:OverflowToolbar>
								</t:footer>
							</t:Table>
							<m:Label text="Net price total this year" required="false"/>
							<m:Text text="{ path: 'ctx>/requestedBudgetThisYear', formatter: '.formatter.In_en_DE_WithCurrency' } {ctx>/currencyCode}"/>
							<!--<m:Text text="{ctx>/requestedBudgetThisYear} {ctx>/currencyCode}"/> -->
							<m:Label text="Net price total next year" required="false"/>
							<m:Text text="{ path: 'ctx>/requestedBudgetNextYear', formatter: '.formatter.In_en_DE_WithCurrency' } {ctx>/currencyCode}"/>
							<!--	<m:Text text="{ctx>/requestedBudgetNextYear} {ctx>/currencyCode}" />-->
							<m:Label text="Net price total in CoCode currency" required="false"/>
							<m:Text text="{ path: 'ctx>/sumAmountInCompCurrencyCode', formatter: '.formatter.In_en_DE_WithCurrency' } {ctx>/currencyCode}"/>
							<!--	<m:Text text="{ctx>/sumAmountInCompCurrencyCode} {ctx>/currencyCode}" /> -->
							<!--<m:Label text="Requisition type" required="true"/>-->
							<!--	<m:RadioButtonGroup id="prTypeRadioButtonWF" columns="2" editable="true" selectedIndex="0" enabled="false" select="onChangeRequisitionType">-->
							<!--	<m:buttons>-->
							<!--		<m:RadioButton id="ZNB" text="Purchase requisition" selected="true"/>-->
							<!--		<m:RadioButton id="ZOF" text="Framework requisition"/>-->
							<!--	</m:buttons>-->
							<!--</m:RadioButtonGroup>-->
							<!--						<m:Label text="CER Number(mandatory) and comments" required="false"/>
						<m:TextArea id="commentTextAreaWF" rows="5" value="{ctx>/requesterComment}" enabled="true" placeholder="Please enter your comment ..."/>
-->
							<!--						<m:Label text="External comment" required="false"/>
						<m:TextArea id="extCommentTextAreaWF" rows="5" value="{ctx>/externalComment}" enabled="true" placeholder="Please enter your comment ..."/> -->
							<m:Label text="Select Invoice Approver" required="true"/>
							<m:Select id="invoiceApproverComboBoxWF" selectedKey="{ctx>/invoiceApprover}" forceSelection="false" showSecondaryValues="true"
								enabled="true" items="{ path: 'InvoiceapproversModel>/invoiceapprovers', sorter: { path: 'FirstName' }, length: '100000' }">
								<core:ListItem key="{InvoiceapproversModel>Zwfdomain1}" text="{InvoiceapproversModel>FirstName} {InvoiceapproversModel>SecondName}"
									additionalText="{InvoiceapproversModel>Zwfrole1}"/>
							</m:Select>
						</form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="Approvers"
				visible="{= (${ctx>/isForwarding} !==undefined &amp;&amp; ${ctx>/isForwarding} === true &amp;&amp; ${ctx>/isForwardingToRequester} !==undefined &amp;&amp; ${ctx>/isForwardingToRequester} ===true)}">
				<subSections>
					<ObjectPageSubSection >
						<form:SimpleForm editable="false" layout="ResponsiveGridLayout" width="100%">
							<core:Title text="Select approvers"/>
							<m:FlexBox height="100px" alignItems="Start" justifyContent="End">
								<m:items>
									<m:Button id="showQuickView" tooltip="Budget info" class="sapUiTinyMarginBottom" icon="sap-icon://hint" press="onOpenInfo"/>
									<m:Button id="clearApproverSelection" class="sapUiTinyMarginBottom" text="Clear appr. selection" enabled="{ctx>/edit}" press="onClearApproverSelection"/>
								</m:items>
							</m:FlexBox>
							<m:Label text="PJM" required="false"/>
							<m:Select id="pjmComboBox" selectedKey="{ctx>/approverpjm}" forceSelection="false" enabled="{fieldEnable>/PJM}" change="onSelectPjm"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'PJM' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="HOD / Associate Director" required="false"/>
							<m:Select id="hodComboBox" selectedKey="{ctx>/approverhod}" forceSelection="false" enabled="{fieldEnable>/NONPJM}" change="onSelectHod"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'HOD' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="Director / Associate VP" required="false"/>
							<m:Select id="directorComboBox" selectedKey="{ctx>/approverdirector}" forceSelection="false" enabled="{fieldEnable>/NONPJM}"
								change="onSelectDirector"
								items="{ path: 'approvers>/approvers', filters: { path : 'Zwfrole1', operator : 'EQ', value1 : 'DIRECTOR' }, sorter: { path: 'FirstName' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="VP" required="false"/>
							<m:Select id="vpComboBox" selectedKey="{ctx>/approvervp}" forceSelection="false" enabled="{fieldEnable>/NONPJM}" change="onSelectVp"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'VP' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="CFO" required="false"/>
							<m:Select id="cfoComboBox" selectedKey="{ctx>/approvercfo}" forceSelection="false" enabled="{fieldEnable>/NONPJM}" change="onSelectCfo"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'CFO' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="MD1" required="false"/>
							<m:Select id="md1ComboBox" selectedKey="{ctx>/approvermd1}" forceSelection="false" enabled="{fieldEnable>/NONPJM}" change="onSelectMd1"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'MD' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="MD2" required="false"/>
							<m:Select id="md2ComboBox" selectedKey="{ctx>/approvermd2}" forceSelection="false" enabled="{fieldEnable>/NONPJM}" change="onSelectMd2"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'MD' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
							<m:Label text="CEO" required="false"/>
							<m:Select id="ceoComboBox" selectedKey="{ctx>/approverceo}" forceSelection="false" enabled="{fieldEnable>/NONPJM}" change="onSelectCeo"
								items="{ path: 'approvers>/approvers', sorter: { path: 'FirstName' }, filters: { path: 'Zwfrole1', operator: 'EQ', value1: 'CEO' }, length: '100000' }">
								<core:ListItem key="{approvers>Zwfdomain1}" text="{approvers>FirstName} {approvers>SecondName}" additionalText="{approvers>SecondName}"/>
							</m:Select>
						</form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="Request"
				visible="{= (${ctx>/isForwardingToRequester} === undefined || ${ctx>/isForwardingToRequester} === false)}">
				<subSections>
					<ObjectPageSubSection >
						<form:SimpleForm editable="false" layout="ResponsiveGridLayout" width="100%">
							<m:Label text="Title" required="false"/>
							<m:Text id="shorttextdisplay" text="{ctx>/ShortText}" visible="true"/>
							<m:Label text=""/>
							<m:Text
								text="Please check, create a purchase order and send the purchase order to vendor. Please inform the requestor, if the supplier contact should be established by the requestor."
								visible="{ctx>/isIndirectProcurement}"/>
							<m:Label text="Requisition Number" visible="{ctx>/isIndirectProcurement}"/>
							<m:Text text="{ctx>/purchaseOrderResult/d/RequisitionNumber}" visible="{ctx>/isIndirectProcurement}"/>
							<m:Label text="PO requisition was not created due to system error" visible="{ctx>/isIndirectProcurement}"/>
							<m:Text text="{ctx>/purchaseOrderResult/d/MessageError1}" visible="{ctx>/isIndirectProcurement}"/>
							<m:Label text="Requester" visible="true"/>
							<m:Text text="{ctx>/requesterName}" visible="true"/>
							<m:Label text="Requested amount - current year" visible="{ctx>/isCreateAsset}"/>
							<!--<m:Text    text="{
										path: 'ctx>/requestedBudgetThisYear',
										formatter: '.formatter.numbersIn_en_DE_WithCurrency'
									}"
									visible="{ctx>/isCreateAsset}"/>-->
							<m:Text text="{ path: 'ctx>/requestedBudgetThisYear', formatter: '.formatter.In_en_DE_WithCurrency' } {ctx>/currencyCode}"
								visible="{ctx>/isCreateAsset}"/>
							<!--<m:Text text="{ctx>/requestedBudgetThisYear} {ctx>/currencyCode}" visible="{ctx>/isCreateAsset}"/>-->
							<m:Label text="Requested amount - next year" visible="{ctx>/isCreateAsset}"/>
							<!--<m:Text text="{
										path: 'ctx>/requestedBudgetNextYear',
										formatter: '.formatter.numbersIn_en_DE_WithCurrency'
									}" visible="{ctx>/isCreateAsset}"/>-->
							<m:Text text="{ path: 'ctx>/requestedBudgetNextYear', formatter: '.formatter.In_en_DE_WithCurrency' } {ctx>/currencyCode}"
								visible="{ctx>/isCreateAsset}"/>
							<!--<m:Text text="{ctx>/requestedBudgetNextYear} {ctx>/currencyCode}" visible="{ctx>/isCreateAsset}"/>-->
							<m:Label text="Legal Entity" visible="true"/>
							<m:Text text="{ctx>/legalEntity} - {ctx>/legalEntityDisplayName}" visible="true"/>
